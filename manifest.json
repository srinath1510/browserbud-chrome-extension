{
  "manifest_version": 3,
  "name": "Smart Notes",
  "version": "1.0",
  "description": "An intelligent note-taking extension that structures your notes using LLM",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}
