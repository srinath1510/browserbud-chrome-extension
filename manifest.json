{
  "manifest_version": 3,
  "name": "Smart Notes",
  "version": "1.0",
  "description": "An intelligent note-taking extension",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
