{
  "manifest_version": 3,
  "name": "BrowserBud",
  "version": "1.0.0",
  "description": "Intelligent note-taking with AI-powered knowledge processing",

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:8000/*",
    "https://your-api-domain.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "BrowserBud"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "batch-processor.js",
        "popup/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
